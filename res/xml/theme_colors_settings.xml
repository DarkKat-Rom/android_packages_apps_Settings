<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/theme_colors_settings_title">

    <ListPreference
        android:key="theme"
        android:title="@string/theme_title"
        android:summary="@string/theme_summary"
        android:entries="@array/theme_entries"
        android:entryValues="@array/theme_values" />

    <ListPreference
        android:key="auto_night_mode"
        android:title="@string/auto_night_mode_title"
        android:summary="@string/auto_night_mode_summary"
        android:entries="@array/auto_night_mode_entries"
        android:entryValues="@array/auto_night_mode_values" />

    <PreferenceScreen
        android:key="colors_detailed_weather_view"
        android:title="@string/detailed_weather_view_title"
        android:summary="@string/colors_detailed_weather_view_summary"
        android:fragment="com.android.settings.darkkat.fragments.themecolors.ColorsDetailedWeatherView" />

    <PreferenceScreen
        android:key="colors_status_bar"
        android:title="@string/status_bar_title"
        android:summary="@string/colors_status_bar_summary"
        android:fragment="com.android.settings.darkkat.fragments.themecolors.ColorsStatusBar" />

    <PreferenceScreen
        android:key="colors_status_bar_expanded"
        android:title="@string/status_bar_expanded_title"
        android:summary="@string/colors_status_bar_expanded_summary"
        android:fragment="com.android.settings.darkkat.fragments.themecolors.ColorsStatusBarExpanded" />

    <PreferenceScreen
        android:key="colors_navigation_bar"
        android:title="@string/navigation_bar_title"
        android:summary="@string/colors_navigation_bar_summary"
        android:fragment="com.android.settings.darkkat.fragments.themecolors.ColorsNavigationBar" />

    <PreferenceScreen
        android:key="colors_recents"
        android:title="@string/recents_title"
        android:summary="@string/colors_recents_summary"
        android:fragment="com.android.settings.darkkat.fragments.themecolors.ColorsRecents" />
</PreferenceScreen>
